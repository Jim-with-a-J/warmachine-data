{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*",
		"data/**/*"
	],
	"exclude": [
		"**/*.spec.ts"
	],
	"types": "./src/types.d.ts"
}
